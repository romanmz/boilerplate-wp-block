{
  "name": "boilerplate-wp-block",
  "version": "1.0.0",
  "description": "Boilerplate plugin for creating Gutenberg blocks",
  "main": "build/index.js",
  "scripts": {
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "blocks": "wp-scripts build src/*.js --output-path=blocks --output-filename=[name]/index.js",
    "formats": "wp-scripts build formats/src/*.js --output-path=formats/dist --output-filename=[name]/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Roman Martinez",
  "license": "GPL-2.0-only",
  "devDependencies": {
    "@wordpress/scripts": "8.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "glob": "^7.1.6",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "webpack-fix-style-only-entries": "^0.4.0"
  }
}
